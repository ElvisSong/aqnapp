<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.njaqn.itravel.aqnapp.am.AM001HomePageActivity" >

    <RelativeLayout
        android:id="@+id/topMenu"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_color" >

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:background="@drawable/title_color"
            android:onClick="returnOnClick"
            android:src="@drawable/m01_jian_tou_left" />

        <TextView
            android:id="@+id/spot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="中山陵景区"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topMenu"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_spotintrotitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topMenu"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="革命先驱历史长存"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4e000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#00000000" >

            <ImageButton
                android:id="@+id/ib_playintro"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:layout_toLeftOf="@+id/ib_playpause"
                android:background="#00ffffff"
                android:src="@drawable/am006_spot_play" />

            <ImageView
                android:id="@+id/iv_gotospot"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:layout_toLeftOf="@+id/ib_playintro"
                android:src="@drawable/am006_spot_goto" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/iv_spot"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_below="@+id/tv_spotintrotitle"
                android:layout_marginTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:scaleType="fitXY" >
            </android.support.v4.view.ViewPager>

            <TextView
                android:id="@+id/tv_spotintro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_spot"
                android:layout_marginTop="12dp"
                android:scrollbars="vertical"
                android:text="    中山陵是中华民国国父、中国民主革命先行者孙中山的陵墓。中山陵前临苍茫平川，后踞巍峨碧嶂，气象壮丽，音乐台、光化亭、流徽榭、仰止亭、藏经楼、行健亭、永丰社、中山书院等纪念性建筑，众星捧月般环绕在陵墓周围，构成中山陵景区的主要景观，且均为建筑名家之杰作，具有极高的艺术价值。各建筑在型体组合、色彩运用、材料表现和细部处理上均取得极好的效果，色调和谐统一更增强了庄严的气氛，既有深刻的含意，又有宏伟的气势，被誉为“中国近代建筑史上第一陵”。"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>