<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.njaqn.itravel.aqnapp.am.AM001HomePageActivity" >
    
    <RelativeLayout 
        android:id="@+id/topMenu"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/title_color">
        
        
        <Button
 	    android:id="@+id/btnLocation"
 	    android:background="#24b69f"
        android:layout_width="wrap_content"  
	    android:layout_height="wrap_content"
	    android:text="南京"
	    android:drawableLeft="@drawable/am003_btn_dianji"
	    android:paddingLeft="3dp"
	    android:layout_centerVertical="true"
	    android:textColor ="@drawable/am003_btn_color"
	    android:onClick="btnLocationOnClick"
        />
        <ImageView 
            android:id="@+id/imgSearch"
            android:layout_width="15dip"
 	        android:layout_height="20dip"
 	        android:layout_marginTop="10dip"
 	        android:layout_alignParentRight="true"
 	        android:layout_marginRight="5dip"
 	        android:src="@drawable/am001_search"
 	        android:onClick="imgSearchOnClick"/>
    </RelativeLayout>

    <RelativeLayout
	    android:layout_width="fill_parent"  
	    android:layout_height="fill_parent"  
        android:layout_below="@+id/topMenu"
        android:layout_above="@+id/bottomMenu"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp">
        
		//景区简介
        <RelativeLayout
            android:id="@+id/lblSpotContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff8c00"
            >
            <TextView
                android:id="@+id/lblSpotTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="中山陵景区"
                android:gravity="center"
                />
            <LinearLayout
                android:id="@+id/lblSpotSummaryContent"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblSpotTitle"
                >
                <ImageView
                    android:id="@+id/imgSpotTilePrint"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/am06_zhongshanling"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:paddingBottom="2dp"
                    />
                <TextView
                    android:id="@+id/textSpotSummaryContent"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="   中山陵地处于南京市东郊紫金山南麓，是中华民国国父、中国民主革命先行者孙中山的陵墓。1961年成为首批全国重点文物保护单位，2007年成为首批国家5A级景区。中山陵前临苍茫平川，后踞巍峨碧嶂，气象壮丽，音乐台、光化亭等纪念性建筑，众星捧月般环绕在陵墓周围，在型体组合、色彩运用、材料表现和细部处理上均取得极好的效果，既有深刻的含意，又有宏伟的气势，被誉为“中国近代建筑史上第一陵”。"
                    android:layout_weight="1"
                    android:ems="12"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    />
            </LinearLayout>
            
            </RelativeLayout>
            //选择按钮集合
                 <LinearLayout
                     android:id="@+id/lblSpotButtonGather"
                     android:orientation="horizontal"
                     android:layout_width="fill_parent"
                     android:layout_height="40dp"
                     android:layout_below="@id/lblSpotContent"
                     android:background="#add8e6"
                     >
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="40dp"
                         android:layout_weight="1"
                         >
                         <ImageView
                         android:id="@+id/imgPlayStop"
                         android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:src="@drawable/am006_img_play_voice_state" 
                         android:layout_centerInParent="true"
                         android:clickable="true"
                         />
                         <ImageView
                             android:id="@+id/imgPlayPrevious"
                             android:layout_width="30dp"
                             android:layout_height="30dp"
                             android:src="@drawable/am006_img_play_up_voice_state"
                             android:layout_toLeftOf="@id/imgPlayStop"
                             android:layout_alignTop="@id/imgPlayStop"
                             android:layout_marginRight="10dp"
                             android:clickable="true"
                             />
                         <ImageView
                             android:id="@+id/imgPlayNext"
                             android:layout_width="30dp"
                             android:layout_height="30dp"
                             android:src="@drawable/am006_img_play_down_voices_tate"
                             android:layout_toRightOf="@id/imgPlayStop"
                             android:layout_alignTop="@id/imgPlayStop"
                             android:layout_marginLeft="10dp"
                             android:clickable="true"
                              />
                     </RelativeLayout>
                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_width="match_parent"
                         android:layout_height="40dp"
                         android:layout_weight="1"
                         >
                         <Button
                             android:id="@+id/imgSpotBuy"
                             android:layout_width="match_parent"
                             android:layout_height="30dp"
                             android:background="@drawable/am006_tab_bg"
                             android:layout_weight="1"
                             android:text="购买语音"
                             android:layout_marginTop="5dp"
                             android:textSize="12sp"
                             android:textColor="#FFFFFF"
                             />
                         <Button
                             android:id="@+id/imgSpotMessage"
                             android:layout_width="match_parent"
                             android:layout_height="30dp"
                             android:background="@drawable/am006_tab_bg"
                             android:layout_weight="1"
                             android:text="购买语音"
                             android:layout_marginTop="5dp"
                             android:layout_marginLeft="2dp"
                             android:textSize="12sp"
                             android:textColor="#FFFFFF"
                             />
                     </LinearLayout>
                </LinearLayout>
                //图片赏析
                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/viewFlipper"
                    android:layout_below="@id/lblSpotButtonGather"
                    android:layout_marginTop="2dp"
                    >
                   //第一个界面
                    <LinearLayout
                        android:id="@+id/lblSpotPrintGather"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#ffffff"
                        >
                        <ImageView 
                            android:id="@+id/imgPrint1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@drawable/am006_zhongshanling3"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/imgPrint2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@drawable/am006_zhongshanling4"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/imgPrint3"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@drawable/am006_zhongshanling3"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/imgPrint4"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:src="@drawable/am006_zhongshanling4"
                            android:layout_weight="1"/> 
                   </LinearLayout>
                   //第二个界面
                   <LinearLayout
                       android:id="@+id/lblSpotPrintGather1"
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="60dp"
                       android:background="#ffffff"
                       >
                       <ImageView
                           android:id="@+id/imgPrint5"
                           android:layout_width="match_parent"
                           android:layout_height="60dp"
                           android:src="@drawable/am006_zhongshanling3"
                           android:layout_weight="1"/>
                       <ImageView
                           android:id="@+id/imgPrint6"
                           android:layout_width="match_parent"
                           android:layout_height="60dp"
                           android:src="@drawable/am006_zhongshanling4"
                           android:layout_weight="1"/>
                       <ImageView
                           android:id="@+id/imgPrint7"
                           android:layout_width="match_parent"
                           android:layout_height="60dp"
                           android:src="@drawable/am006_zhongshanling3"
                           android:layout_weight="1"/>
                       <ImageView
                           android:id="@+id/imgPrint8"
                           android:layout_width="match_parent"
                           android:layout_height="60dp"
                           android:src="@drawable/am006_zhongshanling4"
                           android:layout_weight="1"/> 
                  </LinearLayout>
                  
                  </ViewFlipper>
                  //标签页
                       <TabHost
                           android:id="@+id/tabhost"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_below="@id/viewFlipper"
                           android:background="#ffffff"
                           android:layout_marginTop="2dp"
                           >
                       <LinearLayout
                           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           >            
                           <TabWidget
                               android:layout_width="fill_parent"
                               android:layout_height="wrap_content"
                               android:id="@android:id/tabs"
                               />
                           <FrameLayout
                               android:id="@android:id/tabcontent"
                               android:layout_width="fill_parent"
                               android:layout_height="fill_parent"
                               >
                               <LinearLayout
                                   android:id="@+id/page1"
                                   android:layout_width="fill_parent"
                                   android:layout_height="fill_parent"
                                   android:orientation="horizontal"
                                   >
                                   <ImageView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:src="@drawable/am006_touxiang1"
                                       />
                                   <TextView
                                       android:layout_width="150dp" 
                                       android:layout_height="50dp"
                                       android:text="还不错啦..."
                                       />
                               </LinearLayout> 
                               <LinearLayout
                                   android:id="@+id/page2"
                                   android:layout_width="fill_parent"
                                   android:layout_height="fill_parent"
                                   >
                                   <TextView
                                       android:layout_width="fill_parent"
                                       android:layout_height="fill_parent"
                                       android:text="第二个标签页" 
                                       />
                               </LinearLayout>
                               <LinearLayout
                                   android:id="@+id/page3"
                                   android:layout_width="fill_parent"
                                   android:layout_height="fill_parent"
                                   >
                                   <TextView
                                       android:layout_width="fill_parent" 
                                       android:layout_height="fill_parent"
                                       android:text="第三个标签页"
                                       />
                               </LinearLayout>
                          </FrameLayout>
                      </LinearLayout>  
                  </TabHost>
            
    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/bottomMenu"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2"
        >
		<View 
		    android:layout_height="1dip"
		    android:layout_width="fill_parent"
		    android:background="#24b69f"/>
		<TableLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_marginLeft="5dip"
		    >
		    <TableRow
		        android:layout_width="fill_parent"
		        >
		        
		        <ImageView 
		            android:layout_width="67dip"
		            android:layout_height="50dip"
		            android:src="@drawable/am001_menu_a1"
		            android:layout_gravity="center"
		            />
		        		        
		        <ImageView 
		            android:layout_width="67dip"
		            android:layout_height="50dip"
		            android:src="@drawable/am001_menu_b0"
		            android:layout_gravity="center"
		            android:onClick="changePlayMode"
		            />
		        <ImageView 
		            android:id="@+id/imgPlay"
		            android:layout_width="70dp"
		            android:layout_height="fill_parent"
		            android:visibility="visible"
		            android:src="@drawable/am001_menu_c0"
		            android:layout_gravity="center"
		            android:onClick="imgPlayOnClick"
		            />
		        
		        <ImageView 
		            android:id="@+id/imgStop"
		            android:layout_width="70dp"
		            android:layout_height="fill_parent"
		            android:visibility="gone"
		            android:src="@drawable/am001_menu_c1"
		            android:layout_gravity="center"
		            android:onClick="imgStopOnClick"
		            />
		        
		        <ImageView 
		            android:layout_width="67dip"
		            android:layout_height="50dip"
		            android:src="@drawable/am001_menu_d0"
		            android:layout_gravity="center"
		            android:onClick="downloadOnClick"
		            />
		        <ImageView 
		            android:layout_width="67dip"
		            android:layout_height="50dip"
		            android:src="@drawable/am001_menu_e0"
		            android:layout_gravity="center"
		            android:onClick="btnMyOnClick"
		            />		        		        		        		        	
		    </TableRow>		    		    
		</TableLayout>
    </RelativeLayout>
</RelativeLayout>
